<%= form_for :fyber_offer, url: search_fyber_offers_path, method: :get, html: {class: "form-horizontal", role: "form"} do |f| %>
  <div class="form-group form-group-sm">
    <%= f.label :uid, "UID", class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :uid, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group form-group-sm">
    <%= f.label :pub0, "Pub0", class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :pub0, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group form-group-sm">
    <%= f.label :page, "Page", class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :page, type: :number, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group form-group-sm">
    <div class="col-sm-offset-1 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
<% end %>